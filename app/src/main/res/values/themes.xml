<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Todo_App" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="MyHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item><!-- Adjust the text size as needed -->
    </style>
    <style name="ShapeAppearance.TextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="Theme.Todo_App" parent="Base.Theme.Todo_App" />
    <style name="CardViewStyle" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/CutShape</item>
    </style>
    <style name="CutShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>
    <style name="SearchInputLayout" parent="">
        <item name="endIconMode">clear_text</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="startIconTint">@color/black</item>
    </style>
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="shapeAppearance">@style/CutShape</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@color/black</item>
        <item name="startIconTint">@color/black</item>
    </style>
    <style name="Widget.App.Button.Fill" parent="Widget.Material3.Button">
        <item name="shapeAppearance">@style/CutShape</item>
    </style>

    <style name="DialogCustomTheme" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="savedToast">
        <item name="stTextColor">#FFFFFF</item>
        <item name="stColorBackground">#50C878</item>
        <item name="stIconStart">@drawable/baseline_check_box_24</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#005A04</item>
    </style>
    <style name="deleteToast">
        <item name="stTextColor">#FFFFFF</item>
        <item name="stColorBackground">#FF470D</item>
        <item name="stIconStart">@drawable/baseline_check_box_24</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#AC003A</item>
    </style>
    <style name="editToast">
        <item name="stTextColor">#000000</item>
        <item name="stColorBackground">#FFC107</item>
        <item name="stIconStart">@drawable/baseline_check_box_24</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#B38600</item>
    </style>
</resources>